        <TextBox x:Name="NameNews" HorizontalAlignment="Stretch" Height="80" Margin="10,59,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="AllNews"  HorizontalAlignment="Stretch" Height="255" Margin="10,316,10,0" TextWrapping="Wrap" VerticalAlignment="Top" AcceptsReturn="True" VerticalScrollBarVisibility="Visible"/>
