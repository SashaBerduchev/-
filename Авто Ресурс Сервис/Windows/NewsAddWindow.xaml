        <TextBox x:Name="LinkOnNews" HorizontalAlignment="Stretch" Height="41" Margin="10,625,121,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Content="Зберегти" HorizontalAlignment="Left" Margin="297,777,0,0" VerticalAlignment="Top" Width="251" Height="65" Click="Button_Click"/>
        <Button x:Name="AddImage" Content="Додати зображення" HorizontalAlignment="Left" Margin="297,666,0,0" VerticalAlignment="Top" Width="251" Height="36" Click="AddImage_Click" />

    </Grid>
</Window>
